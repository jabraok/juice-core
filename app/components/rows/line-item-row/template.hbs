<div
  class="card-blue flex items-stretch justify-between shadow"
  data-test-line-item-row
>
  <div class="text-3xl font-light flex items-center">
    {{#if isDestroyable}}
      <div class="cursor-pointer bg-blue-lightest text-base p-6">
        {{input type="checkbox" checked=model.isSelected data-test-select=true}}
      </div>
    {{/if}}

    {{#link-to (node-link-path model.b) model.b.id tabindex="-1" class="group"}}
      <span class="ml-6 group-hover:border-b-grey" data-test-label>{{model.b.label}}</span>
      <span class="ml-1 text-lg text-grey-darker invisible group-hover:visible">{{fa-icon "pencil"}}</span>
    {{/link-to}}
  </div>

  <div class="flex items-stretch">
    <div class="flex">
      <div class="flex items-center mr-2 p-4 qty-input" data-test-edge-quantity>
        {{input
          class="w-24 mr-2 bg-transparent text-3xl font-bold text-grey-darker text-right"
          value=model.q
          key-up=(action handleUpdate model "q")
          placeholder="0"
        }}
      </div>

      {{#if (not (is-empty uoms))}}
        <div class="flex items-center px-4 uom">
          <div class="w-24">
            {{#power-select
              tabindex="-1"
              selected=model.uom
              options=uoms
              onchange=(action handleUpdate model "uom")
            as |option|
            }}
              {{option}}
            {{/power-select}}
          </div>
        </div>
      {{/if}}
    </div>
  </div>
</div>
